{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="hero-img"> </div>

    <div class="container">
        <h1>Login</h1>
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        {{ form_start(loginForm) }}
        <div class="form-group">
            {{ form_label(loginForm.email,null,{'label_attr': {'class': 'foo'}}) }} 
            <div class="col-md-12">
                {{ form_widget(loginForm.email) }}
                {{ form_errors(loginForm.plainPassword) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(loginForm.plainPassword,'Password',{'label_attr': {'class': 'foo'}}) }} 
            <div class="col-md-12">
                {{ form_widget(loginForm.plainPassword) }}
                {{ form_errors(loginForm.plainPassword) }}
            </div>
        </div>
        <a href="{{ url('customer_forgotpassword') }}" >Forgot your password ?</a>
        <div class="form-group pt-2">
            <button type="submit" class="btn btn-primary">Login</button> <a href="{{ url('customer_register') }}" class="btn btn-outline-primary">Signup</a>
        </div>
        {{ form_end(loginForm) }}
    </div>
 
{% endblock %}

