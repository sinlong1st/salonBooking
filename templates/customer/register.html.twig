    <div class="form-group"> 
        {{ form_label (registrationForm.zipcode) }}
        <div class="col-md-8"> 
            {{ form_widget(registrationForm.zipcode) }}
            {{ form_errors(registrationForm.zipcode) }}
        </div>
    </div>
    <div class="form-group"> 
        {{ form_label (registrationForm.additionalInfo) }}
        <div class="col-md-8"> 
            {{ form_widget(registrationForm.additionalInfo) }}
            {{ form_errors(registrationForm.additionalInfo) }}
        </div>
    </div>
 <div class="form-group"> 

    {{ form_row(registrationForm.agreeTerms) }}
    
 </div>
    <button type="submit" class="btn btn-primary">Register</button>
    <a href="{{ url('customer_login') }}" class="btn btn-secondary">Cancel</a>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
