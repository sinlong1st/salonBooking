{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
    <h1>Change Password</h1>
     {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %} 
    

    {{ form_start(changePasswordForm) }}
    <div class="form-group">
        {{ form_label(changePasswordForm.oldPassword)}}
        <div>
            {{ form_widget(changePasswordForm.oldPassword)}}
        </div>
    </div>
    <div class="form-group">
        {{ form_label(changePasswordForm.newPassword)}}
        <div>
            {{ form_widget(changePasswordForm.newPassword)}}
        </div>
    </div>
    <div class="form-group pt-2">
        <button type="submit" class="btn btn-primary">Update</button>
        <a style="width: 90px"class="btn btn-danger" href="{{ url('customer') }}" class="btn btn-outline-primary">
            Go back
        </a>
    </div>
    {{ form_end(changePasswordForm) }}

{% endblock %}