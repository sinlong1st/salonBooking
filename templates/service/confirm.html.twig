{% extends 'base.html.twig' %}

{% block title %}Confirmation{% endblock %}

{% block body %}
    <br><br>
    <h2>Confirm your booking</h2>
    {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
    {% endfor %}
    <h5>Personal information: </h5>
    <form action="{{ url('booking_confirm') }}" method="post">
    <div class ="Info">
        Full name: {{customer.firstname}} {{customer.lastname}}<br>
        <b>Your Address (Modifiable): </b><br>
        <label style="width:180px;clear:left;text-align:left;padding-right:10px;float:left">Street address 1: </label><input name ="newAdress" type ="text" size="50" value = '{{customer.address}}'><br>
        <label style="width:180px;clear:left;text-align:left;padding-right:10px;float:left">Street address 2: </label><input name ="newAdress2" type ="text" size="50" value = '{{customer.address2}}'><br>
        <label style="width:180px;clear:left;text-align:left;padding-right:10px;float:left">City: </label><input name ="newCity" type ="text" size="50" value = '{{ customer.city }}'><br>
        <label style="width:180px;clear:left;text-align:left;padding-right:10px;float:left">State: </label><input name ="newState" type ="text" size="50" value = '{{ customer.state }}'><br>
        <label style="width:180px;clear:left;text-align:left;padding-right:10px;float:left">Zipcode: </label><input name ="newZipcode" type ="text" size="50" value = '{{ customer.zipcode }}'>
    </div>
    <br>
    <h5>Booking information: </h5>
    <div class ="Info">
        Store name: {{shopInfo.name}} <br>
        Address: {{shopInfo.address1}} {{shopInfo.address2}}, {{shopInfo.city}}, {{shopInfo.state}}<br>
        Selected services: {{bookingservice}}<br>
        Date: {{date}}<br>
        Time: {{hourDigit}}:{{minDigit}}<br>
        {# Total: $25 <br> #}
        <br>
    </div>
    <a class="btn btn-danger" href="{{ url('app_shop') }}" >
    Go back
    </a>
    <button type="submit" class="btn btn-primary">Book your appointment</button>
    </form>
{% endblock %}
